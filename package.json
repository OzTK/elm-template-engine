{
  "name": "elm-template-engine",
  "version": "0.1.0",
  "description": "Template engine rendering elm views to a string. Made for Express",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf lib test/*.{js,js.map} src/*.{js,js.map} .nyc_output coverage",
    "prebuild": "npm run clean",
    "build": "tsc -p .",
    "postbuild": "copyfiles package.json README.md LICENSE lib/",
    "snyk": "snyk test",
    "test": "nyc mocha --compilers ts:ts-node/register --require source-map-support/register --bail test/*.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OzTK/elm-template-engine.git"
  },
  "keywords": [
    "elm",
    "nodejs",
    "template",
    "expressjs"
  ],
  "author": "Paul Duguet",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OzTK/elm-template-engine/issues"
  },
  "homepage": "https://github.com/OzTK/elm-template-engine#readme",
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/elm-server-side-renderer"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/elm": "^0.12.29",
    "@types/express": "^4.0.36",
    "@types/handlebars": "^4.0.35",
    "@types/mkdirp": "^0.5.0",
    "@types/mocha": "^2.2.41",
    "@types/ncp": "^2.0.0",
    "@types/rimraf": "0.0.28",
    "@types/should": "^8.3.0",
    "@types/sinon": "^2.3.3",
    "copyfiles": "^1.2.0",
    "express": "^4.15.3",
    "mocha": "^3.5.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.1.0",
    "should": "^11.2.1",
    "sinon": "^2.4.1",
    "snyk": "^1.38.0",
    "source-map-support": "^0.4.15",
    "standard": "^10.0.2",
    "ts-node": "^3.3.0",
    "tslint-config-prettier": "^1.3.0",
    "coveralls": "^2.13.1",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "handlebars": "^4.0.10",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-elm-compiler": "^4.3.2",
    "rimraf": "^2.6.1"
  }
}
