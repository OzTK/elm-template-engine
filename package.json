{
  "name": "elm-view-engine",
  "version": "1.0.3",
  "description": "Renders elm views from a directory of elm modules. This can and is meant to be plugged into Express as a template engine.",
  "main": "index.js",
  "readme": "README.md",
  "scripts": {
    "clean": "rimraf lib test/*.{js,js.map} src/*.{js,js.map} .nyc_output coverage",
    "prebuild": "npm run clean",
    "build": "tsc -p .",
    "postbuild": "copyfiles -f package.json src/Main.elm.hbs src/elm-package.json README.md CHANGELOG.md LICENSE lib/ && copyfiles -u 1 'src/elm-server-side-renderer/**/*' lib/",
    "publish": "npm publish lib",
    "snyk": "snyk test",
    "test": "nyc mocha --compilers ts:ts-node/register --require source-map-support/register --bail test/*.ts",
    "coverage:local": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "bin": "./cli.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OzTK/elm-template-engine.git"
  },
  "keywords": [
    "elm",
    "nodejs",
    "template",
    "expressjs"
  ],
  "author": "Paul Duguet",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OzTK/elm-template-engine/issues"
  },
  "homepage": "https://github.com/OzTK/elm-template-engine#readme",
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/elm-server-side-renderer",
      "src/cli.ts"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/cli-color": "^0.3.29",
    "@types/commander": "^2.9.1",
    "@types/debug": "0.0.30",
    "@types/elm": "^0.12.29",
    "@types/express": "^4.0.36",
    "@types/handlebars": "^4.0.35",
    "@types/mkdirp": "^0.5.0",
    "@types/mocha": "^2.2.41",
    "@types/ncp": "^2.0.0",
    "@types/rimraf": "0.0.28",
    "@types/should": "^8.3.0",
    "@types/sinon": "^2.3.3",
    "copyfiles": "^1.2.0",
    "coveralls": "^2.13.1",
    "express": "^4.15.3",
    "mocha": "^3.5.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.1.0",
    "should": "^11.2.1",
    "sinon": "^2.4.1",
    "snyk": "^1.38.0",
    "source-map-support": "^0.4.15",
    "ts-node": "^3.3.0",
    "tslint-config-prettier": "^1.3.0",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "cli-color": "^1.2.0",
    "commander": "^2.11.0",
    "debug": "^3.0.0",
    "handlebars": "^4.0.10",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-elm-compiler": "^4.3.2",
    "rimraf": "^2.6.1"
  }
}
